<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.cloudSync"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET"/> 
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <application 
        android:theme="@style/Theme.D1"
      	android:icon="@drawable/ic_launcher" 
      	android:label="@string/app_name">
      	
        <activity android:name=".UserLoginActivity"
                  android:label="@string/app_name">
         <intent-filter>
             <action android:name="android.intent.action.MAIN" />
             <category android:name="android.intent.category.LAUNCHER" />
         </intent-filter>
      </activity>

      <activity android:name=".HomeScreenActivity"
            android:theme="@style/Theme.D1"
            android:label="@string/title_feature1"
            />
      <activity android:name=".FileUploadActivity"
            android:theme="@style/Theme.D1"
            android:label="@string/title_feature2"
            />
      <activity android:name=".FileDownloadActivity"
            android:theme="@style/Theme.D1"
            android:label="@string/title_feature3"
            />
      <activity android:name=".FileDownloadActivity1"
            android:theme="@style/Theme.D1"
            android:label="@string/title_feature3"
            />        	
    </application>
</manifest>
